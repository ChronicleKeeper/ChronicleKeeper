{% extends 'layout.html.twig' %}

{% block page_title %}Künste der Mechthild{% endblock %}

{% block page_title_actions %}
<div class="col-auto ms-auto d-print-none">
    <div class="btn-list">
        <a href="{{ path('image_generator_create') }}" class="btn d-none d-sm-inline-block">
            {{ ux_icon('tabler:photo-plus') }} Neuer Auftrag
        </a>
    </div>
</div>
{% endblock %}

{% block page_content %}

<div class="container-xl">
    <div class="row row-deck row-cards">

        <div class="col-12">
            <div class="card">
                <div class="card-table table-responsive">
                    <table class="table table-vcenter">
                        <thead>
                            <tr>
                                <th>Titel</th>
                                <th class="w-8">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for request in requests %}

                                <tr>
                                    <td>{{ request.title }}</td>
                                    <td class="text-end">
                                        <a href="{{ path('image_generator_generator', {'generatorRequest': request.id}) }}" title="Mechthilds Atelier">{{ ux_icon('tabler:photo-ai') }}</a>
                                        <a href="{{ path('image_generator_delete', {'generatorRequestId': request.id}) }}"
                                           title="In den Müll mit der Kunst?!"
                                           data-confirm
                                           data-confirm-message="Möchtest du den Auftrag &quot;{{ request.title }}&quot; wirklich löschen?"
                                        >{{ ux_icon('tabler:photo-minus', {'color': 'var(--tblr-danger)'}) }}</a>
                                    </td>
                                </tr>

                            {% else %}
                                <tr><td colspan="3">Alle Bilder der Mechthild Flammenblüte wurden gestohlen! Begibst du dich auf die riskante Queste, sie aufzuspüren oder ihr neue Inspiration zu schenken ... ?</td></tr>
                            {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

{% endblock %}

<div class="row row-deck row-cards" {{ attributes }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'store',
            'data-model': 'norender|*',
        }
    }) }}

        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="accordion" id="accordion-example">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-1">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1" aria-expanded="false">
                                    Details zum k√ºnstlerischen Auftrag
                                </button>
                            </h2>
                            <div id="collapse-1" class="accordion-collapse collapse" data-bs-parent="#accordion-example" style="">
                                <div class="accordion-body pt-0">
                                    <div class="row g-5">
                                        <div class="col-12">{{ form_row(form.title) }}</div>
                                        <div class="col-12">
                                            {{ form_label(form.prompt) }}
                                            <twig:markdownEditor name="generator_request[prompt]" content="{{ form.prompt.vars.value }}" />
                                            {{ form_errors(form.prompt) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer mt-auto">
                                    <div class="btn-list justify-content-end">
                                        <button type="submit" class="btn btn-primary">Speichern</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

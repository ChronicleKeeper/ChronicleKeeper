{% extends 'layout.html.twig' %}

{% block page_title %}Einstellungen - Anwendung - Import{% endblock %}

{% block page_content %}
    <div class="container-xl">
        <form action="{{ path('application_import') }}" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="row g-0">
                {% include 'settings/_includes/settings_nav.html.twig' %}
                <div class="col-12 col-md-9 d-flex flex-column">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-important alert-info">
                                    Der Import ermöglicht es dir eine zuvor exportierte Version von
                                    Chronice Keeper wieder zu importieren. Entsprechend solltest du nur Archive
                                    von dieser Anwendung verwenden. Diese Möglichkeit kann auch genutzt
                                    werden um Datenbestände oder -sicherungen von älteren Versionen
                                    einzuspielen.
                                </div>
                                {{ form_row(form.archive) }}
                            </div>
                            <div class="col-12">
                                <b>Weitere Einstellungen</b>
                            </div>
                            <div class="col-12 mt-5">
                                <div class="row">
                                    <div class="col-6">
                                        {{ form_row(form.overwrite_settings) }}
                                        {{ form_row(form.overwrite_library) }}
                                    </div>
                                    <div class="col-6">
                                        {{ form_row(form.prune_library) }}
                                        <span style="color: var(--tblr-danger-text-emphasis);">
                                            {{ ux_icon('tabler:alert-circle') }} Vorsicht! Der harte Besen kehrt wirklich alles aus der Bilbiothek!
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer mt-auto">
                <div class="btn-list justify-content-end">
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </div>
        </div>
        </form>
    </div>
{% endblock %}

<div class="col-12 col-md-3 border-end">
    <div class="card-body">
        <h4 class="subheader">Chatbot</h4>
        <div class="list-group list-group-transparent">
            <a href="{{ path('settings') }}" class="list-group-item list-group-item-action d-flex align-items-center{{ form.vars.name is same as 'chatbot_general' ? ' active' : '' }}">Allgemein</a>
            <a href="{{ path('settings', {'section': 'chatbot_tuning'}) }}" class="list-group-item list-group-item-action{{ form.vars.name is same as 'chatbot_tuning' ? ' active' : '' }}">Tuning</a>
            <a href="{{ path('settings_chatbot_functions') }}" class="list-group-item list-group-item-action{{ app.request.attributes.get('_route') is same as 'settings_chatbot_functions' ? ' active' : '' }}">Funktionen</a>
        </div>
        <h4 class="subheader mt-4">Kalender</h4>
        <div class="list-group list-group-transparent">
            <a href="{{ path('settings', {'section': 'calendar_general'}) }}" class="list-group-item list-group-item-action{{ form.vars.name is same as 'calendar_general' ? ' active' : '' }}">Allgemein</a>
            <a href="{{ path('settings', {'section': 'calendar_holiday'}) }}" class="list-group-item list-group-item-action{{ form.vars.name is same as 'calendar_holiday' ? ' active' : '' }}">Feiertage</a>
            <a href="{{ path('settings', {'section': 'calendar_moon'}) }}" class="list-group-item list-group-item-action{{ form.vars.name is same as 'calendar_moon' ? ' active' : '' }}">Mondkalender</a>
        </div>
        <h4 class="subheader mt-4">Anwendung</h4>
        <div class="list-group list-group-transparent">
            <a href="{{ path('settings', {'section': 'application'}) }}" class="list-group-item list-group-item-action no-loader">Allgemein</a>
            <a href="{{ path('application_import') }}" class="list-group-item list-group-item-action no-loader">Import</a>
            <a href="{{ path('application_export') }}" class="list-group-item list-group-item-action no-loader">Export</a>
        </div>
    </div>
</div>

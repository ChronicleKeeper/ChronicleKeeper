{
    "name": "chronical-keeper/chronical-keeper",
    "description": "Der Chronicle Keeper ist ein interaktiver Begleiter f√ºr Rollenspieler, der mit ChatGPT Dokumente effizient verwaltet und Abenteuer zum Leben erweckt.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ChronicleKeeper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChronicleKeeper\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Denis Zunke",
            "email": "denis.zunke@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "ext-zip": "*",
        "league/commonmark": "^2.5",
        "league/flysystem": "^3.28",
        "league/flysystem-ziparchive": "^3.28",
        "league/html-to-markdown": "^5.1",
        "oskarstark/readable-filesize-extension": "^1.2",
        "php-llm/llm-chain": "^0.5",
        "php-llm/llm-chain-bundle": "^0.5",
        "phpoffice/phpword": "^1.3",
        "smalot/pdfparser": "^2.11",
        "symfony/asset": "^7.1",
        "symfony/asset-mapper": "^7.1",
        "symfony/clock": "^7.1",
        "symfony/console": "^7.1",
        "symfony/dotenv": "^7.1",
        "symfony/finder": "^7.1",
        "symfony/form": "^7.1",
        "symfony/framework-bundle": "^7.1",
        "symfony/messenger": "^7.1",
        "symfony/mime": "^7.1",
        "symfony/monolog-bundle": "^3.10",
        "symfony/property-info": "^7.1",
        "symfony/runtime": "^7.1",
        "symfony/serializer": "^7.1",
        "symfony/stimulus-bundle": "^2.19",
        "symfony/translation": "^7.1",
        "symfony/twig-bundle": "^7.1",
        "symfony/ux-icons": "^2.19",
        "symfony/ux-live-component": "^2.19",
        "symfony/ux-turbo": "^2.19",
        "symfony/validator": "^7.1",
        "symfony/yaml": "^7.1",
        "twig/extra-bundle": "^3.13",
        "twig/markdown-extra": "^3.12",
        "webmozart/assert": "*"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": false,
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpstan/phpstan-symfony": "^1.4",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^11.3",
        "rector/rector": "^1.2",
        "symfony/browser-kit": "^7.1",
        "symfony/css-selector": "^7.1",
        "symfony/debug-bundle": "^7.1",
        "symfony/var-dumper": "^7.1",
        "symfony/web-profiler-bundle": "^7.1"
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "php bin/console cache:clear",
            "assets:install %PUBLIC_DIR%": "php bin/console assets:install public",
            "importmap:install": "php bin/console importmap:install"
        }
    }
}
